@model EntrepriseViewModel
@{
  ViewData["Title"] = "Entreprises";
}
<h1>@ViewData["Title"]</h1>

<div class="pagetitle">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a class="navbar-brand" asp-area="" asp-controller="Dashboard"
          asp-action="Index">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">Entreprises</li>
    </ol>
  </nav>
</div><!-- End Page Title -->



<section class="section contact">

  <div class="row">

    <!-- Ajouter une nouvelle entreprise -->
    <div class="col text-center m-4">
      <button type="button" class="info-box text-center btn btn-outline-secondary m-4" data-bs-toggle="modal"
        data-bs-target="#new">
        <i class="ri ri-add-line"></i>
        <h3>Nouvelle Entreprise</h3>
      </button>
    </div>

    <div class="modal fade" id="new" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Nouvelle Entreprise</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form method="post" class="row needs-validation g-3" asp-controller="Entreprise" asp-action="NewEntreprise"
              novalidate>
              <div class="col-md-12">
                <input asp-for="@Model.TargetEntreprise.NomEntreprise" maxlength="20" type="text" class="form-control"
                  placeholder="Nom de l'entreprise" name="nomEntreprise" required>
              </div>
              <div class="col-md-6">
                <input asp-for="@Model.TargetEntreprise.Siret" maxlength="14" minlength="14" type="text"
                  class="form-control" placeholder="Siret" name="siret" required>
              </div>
              <div class="col-md-6">
                <input asp-for="@Model.TargetEntreprise.Siege" type="text" class="form-control" placeholder="Siege"
                  name="siege" required>
              </div>
              <div class="col-12">
                <input asp-for="@Model.TargetEntreprise.Activite" type="text" class="form-control"
                  placeholder="Activite" name="activite" required>
              </div>
              <div class="col-md-6">
                <input id="test" asp-for="@Model.TargetEntreprise.APE" type="text" minlength="5" maxlength="5"
                  class="form-control" placeholder="APE" name="ape" required>
                  <div class="invalid-feedback" formaction="test">
                    Please provide a valid city.
                  </div>
              </div>
              <div class="col-md-6">
                <input asp-for="@Model.TargetEntreprise.Statut" type="text" class="form-control" placeholder="Statut"
                  name="statut" required>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required="">
                <label class="form-check-label" for="invalidCheck">
                  Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                  You must agree before submitting.
                </div>
              </div>

              <div class="col-12">
                <div class="form-floating">
                  <textarea asp-for="@Model.TargetEntreprise.Description" class="form-control" id="floatingTextarea"
                    name="description" style="height: 100px;"></textarea>
                  <label for="floatingTextarea">Description</label>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abandonner</button>
                <button type="submit" class="btn btn-success">Sauvegarder</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="col">
    @foreach (var item in Model.Entreprises)
    {
      Model.TargetEntreprise = item;
      @await Html.PartialAsync("EntreprisePartial/EditEntreprise")
    }
  </div>

  </div>

</section>
