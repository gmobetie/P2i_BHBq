@model EntrepriseViewModel
@{
  ViewData["Title"] = "Entreprises";
}
<h1>@ViewData["Title"]</h1>

<div class="pagetitle">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a class="navbar-brand" asp-area="" asp-controller="Dashboard"
          asp-action="Index">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">Entreprises</li>
    </ol>
  </nav>
</div><!-- End Page Title -->



<section class="section contact">

  <div class="row">

    <!-- Ajouter une nouvelle entreprise -->
    <div class="col text-center m-4">
      <button type="button" class="info-box text-center btn btn-outline-secondary m-4" data-bs-toggle="modal"
        data-bs-target="#new">
        <i class="ri ri-add-line"></i>
        <h3>Nouvelle Entreprise</h3>
      </button>
    </div>

    <div class="modal fade" id="new" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Nouvelle Entreprise</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form method="post" class="row needs-validation g-3" asp-controller="Entreprise" asp-action="NewEntreprise"
              novalidate>
              <div class="col-md-12">
                <input asp-for="@Model.TargetEntreprise.NomEntreprise" maxlength="20" type="text" class="form-control"
                  placeholder="Nom de l'entreprise" name="nomEntreprise" pattern="[A-Z-]+"
                  title="Veuillez fournir un nom d'entreprise en majuscules avec éventuellement des tirets (-)"
                  required>
                <div class="invalid-feedback" for="nomEntreprise">
                  Veuillez fournir un nom d'entreprise en majuscules avec éventuellement des tirets (-).
                </div>
              </div>
              <div class="col-md-6">
                <input asp-for="@Model.TargetEntreprise.Siege" type="text" class="form-control" placeholder="Siège"
                  name="siege" pattern="[A-Za-z0-9\s]{1,100}" required>
                <div class="invalid-feedback" for="siege">
                  Veuillez fournir une adresse de siège valide.
                </div>
              </div>
              <div class="col-md-6">
                <select asp-for="@Model.TargetEntreprise.Statut" class="form-control" name="statut" id="statut"
                  required>
                  <option value="">Sélectionnez un statut</option>
                  <option value="SAS">SAS</option>
                  <option value="SARL">SARL</option>
                  <option value="SA">SA</option>
                  <option value="EI">EI</option>
                  <option value="EURL">EURL</option>
                  <option value="SNC">SNC</option>
                  <option value="SCOP">SCOP</option>
                  <option value="SC">SC</option>
                  <option value="GIE">GIE</option>
                  <option value="Autre">Autre</option>
                </select>
                <div class="invalid-feedback" for="statut">
                  Veuillez sélectionner un statut.
                </div>
              </div>
              <div class="col-md-12">
                <input asp-for="@Model.TargetEntreprise.Activite" type="text" class="form-control"
                  placeholder="Activité" name="activite" required>
                <div class="invalid-feedback" for="activite">
                  Veuillez fournir une activité valide.
                </div>
              </div>
              <div class="col-md-6">
                <input asp-for="@Model.TargetEntreprise.Siret" pattern="[0-9]{14}" type="text" class="form-control"
                  placeholder="SIRET" name="siret" minlength="14" maxlength="14" required>
                <div class="invalid-feedback" for="siret">
                  Veuillez fournir un code SIRET valide (14 chiffres).
                </div>
              </div>
              <div class="col-md-6">
                <input asp-for="@Model.TargetEntreprise.APE" type="text" pattern="[0-9]{4}[A-Z]{1}" class="form-control"
                  placeholder="APE" name="ape" required>
                <div class="invalid-feedback" for="ape">
                  Veuillez fournir un code APE valide (4 chiffres et 1 lettre majuscule).
                </div>
              </div>

              <div class="col-12">
                <div class="form-floating">
                  <textarea asp-for="@Model.TargetEntreprise.Description" class="form-control" id="floatingTextarea"
                    name="description" style="height: 100px;"></textarea>
                  <label for="floatingTextarea">Description</label>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abandonner</button>
                <button type="submit" class="btn btn-success">Sauvegarder</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="col">
    @foreach (var item in Model.Entreprises)
    {
      Model.TargetEntreprise = item;
      @await Html.PartialAsync("EntreprisePartial/EditEntreprise")
    }
  </div>

  </div>

</section>
