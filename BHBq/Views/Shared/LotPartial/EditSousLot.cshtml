@model LotsViewModel
@{
    Lot temporaryLot = new Lot();
    int comptSL = 0; // Garde en mémoire le nombre de Sous-lots
    var souslots = Model.Lots
    .Where(l => l.IdLot.StartsWith($"{Model.Lot.IdLot}."))
    .ToList();
    comptSL = souslots.Count();
    var newSid = comptSL + 1;
}

<div class="accordion-item">
    <div class="accordion-header d-flex justify-content-between align-items-center" id="heading-@Model.SousLot.Id">
        <button class="accordion-button" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapse-@Model.SousLot.Id" aria-expanded="false"
            aria-controls="collapse-@Model.SousLot.Id">
            @Model.SousLot.IdLot @Model.SousLot.Designation
        </button>
        <div class="d-flex justify-content-between align-items-center m-4 gap-2">
            <!-- Bouton Modifier sous-lot -->
            <div class="col">
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                    data-bs-target="#edit-@Model.SousLot.Designation">Modifier</button>
            </div>

            <!-- Modal de modification de sous-lot -->
            <div class="modal fade" id="edit-@Model.SousLot.Designation" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modifier le lot @Model.SousLot.Designation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" class="row g-3" asp-controller="Lot" asp-action="EditLot"
                                asp-route-Id="@Model.SousLot.Id">
                                <div class="col-md-12">
                                    <input asp-for="@temporaryLot.IdEntreprise" type="hidden" class="form-control"
                                        placeholder="IdEntreprise" name="IdEntreprise" value="@Model.Entreprise.Id">
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="@temporaryLot.Designation" type="text" class="form-control"
                                        placeholder="Désignation" name="designation" required>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="@temporaryLot.IdLot" type="hidden" placeholder="IdLot" name="idLot"
                                        value="@Model.Lot.IdLot.@newSid" required>
                                </div>
                                <div class="col-12">
                                    <input asp-for="@temporaryLot.CoefPose" type="number" class="form-control"
                                        placeholder="Coéficient de Lot" name="coefPose" step="0.001" min="0" max="1">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Abandonner</button>
                                    <button type="submit" class="btn btn-success">Sauvegarder</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bouton Supprimer sous-lot -->
            <form asp-area="" asp-controller="Lot" asp-action="DeleteLot" asp-route-id="@Model.SousLot.Id" method="post"
                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lot ?');">
                <div class="col">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                </div>
            </form>
        </div>
    </div>
    <div id="collapse-@Model.SousLot.Id" class="accordion-collapse collapse" aria-labelledby="heading-@Model.SousLot.Id"
        data-bs-parent="#accordionSousLots-@Model.Entreprise.Id">
        <div class="accordion-body">
            <!-- Boucle des lots terminaux -->
            <div class="accordion" id="accordionLotsTerminaux-@Model.Entreprise.Id">
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-sm btn-dark">Ajouter un lot terminal</button>
                </div>
                @foreach (var lotTerminal in Model.Lots)
                {
                    if (Model.SousLot.IdLot.StartsWith($"{Model.Lot.IdLot}.{Model.SousLot.IdLot}"))
                    {
                        <div class="accordion-item">
                            <div class="accordion-header d-flex justify-content-between align-items-center"
                                id="heading-@lotTerminal.Id">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse-@lotTerminal.Id" aria-expanded="false"
                                    aria-controls="collapse-@lotTerminal.Id">
                                    @lotTerminal.IdLot @lotTerminal.Designation
                                </button>
                                <div class="d-flex justify-content-between align-items-center m-4 gap-2">
                                    <div class="col">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Modifier</button>
                                    </div>
                                    <div class="col">
                                        <button type="button" class="btn btn-sm btn-outline-danger">Supprimer</button>
                                    </div>
                                </div>
                            </div>
                            <div id="collapse-@lotTerminal.Id" class="accordion-collapse collapse"
                                aria-labelledby="heading-@lotTerminal.Id"
                                data-bs-parent="#accordionLotsTerminaux-@Model.Entreprise.Id">
                                <div class="accordion-body">
                                    <!-- Boucle des lots terminaux -->
                                    Quoicoubeh
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>