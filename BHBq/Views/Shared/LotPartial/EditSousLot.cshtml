@model LotsViewModel

@{
    string accordionId = $"accordion-{Model.SousLot.Id}";
    string collapseId = $"collapse-{Model.SousLot.Id}";

    Lot temporaryLot = new Lot();

    int comptSL = 0; // Garde en mémoire le nombre de Sous-lots
    var souslots = Model.Lots
    .Where(l => l.IdLot.StartsWith($"{Model.Lot.IdLot}.") && l.IdLot.Count(c => c == '.') == 1)
    .ToList();
    comptSL = souslots.Count();
    var newSid = comptSL + 1;

    int comptLT = 0; // Garde en mémoire le nombre de lots terminaux
    var lotsTerminaux = Model.Lots
    .Where(l => l.IdLot.StartsWith($"{Model.Lot.IdLot}.") && l.IdLot.Count(c => c == '.') == 2)
    .ToList();
    comptLT = lotsTerminaux.Count();
    var newLTid = comptLT + 1;
}

<div class="accordion-item">
    <div class="accordion-header d-flex justify-content-between align-items-center" id="heading-@Model.SousLot.Id">

        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapse-@Model.SousLot.Id" aria-expanded="false"
            aria-controls="collapse-@Model.SousLot.Id">
            @Model.SousLot.IdLot @Model.SousLot.Designation
        </button>

        <div class="d-flex justify-content-between align-items-center m-4 gap-2">
            <!-- Bouton Modifier sous-lot -->
            <div class="col">
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                    data-bs-target="#edit-@Model.SousLot.Id">Modifier</button>
            </div>

            <!-- Modal de modification de sous-lot -->
            <div class="modal fade" id="edit-@Model.SousLot.Id" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modifier le lot @Model.SousLot.Designation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" class="row g-3" asp-controller="Lot" asp-action="EditLot"
                                asp-route-Id="@Model.SousLot.Id">
                                <div class="col-md-12">
                                    <input asp-for="@temporaryLot.IdEntreprise" type="hidden" class="form-control"
                                        placeholder="IdEntreprise" name="IdEntreprise" value="@Model.Entreprise.Id">
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="@temporaryLot.Designation" type="text" class="form-control"
                                        placeholder="Désignation" name="designation">
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="@temporaryLot.IdLot" type="hidden" placeholder="IdLot" name="idLot"
                                        value="@Model.Lot.IdLot.@newSid">
                                </div>
                                <div class="col-12">
                                    <input asp-for="@temporaryLot.CoefPose" type="text" class="form-control"
                                        placeholder="Coéficient de Lot" name="coefPose" pattern="[0-9]+(\.[0-9]+)?">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Abandonner</button>
                                    <button type="submit" class="btn btn-success">Sauvegarder</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bouton Supprimer -->
            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                data-bs-target="#deleteModal-@Model.SousLot.Id">Supprimer</button>

            <!-- Modal de confirmation de suppression -->
            <div class="modal fade" id="deleteModal-@Model.SousLot.Id" tabindex="-1" aria-labelledby="deleteModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center">
                            Êtes-vous sûr de vouloir supprimer ce sous-lot ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form asp-area="" asp-controller="Lot" asp-action="DeleteLot"
                                asp-route-id="@Model.SousLot.Id" method="post">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="collapse-@Model.SousLot.Id" class="accordion-collapse collapse" aria-labelledby="heading-@Model.SousLot.Id"
        data-bs-parent="#accordionLots-@Model.Lot.Id">

        <div class="accordion-body">

            <!-- Accordion des lots terminaux -->
            <div class="accordion" id="accordionLots-@Model.SousLot.Id">


                <!-- Bouton d'ajout d'un lot terminal -->
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-sm btn-dark" data-bs-toggle="modal"
                        data-bs-target="#new-s-@Model.SousLot.Id">Ajouter un
                        lot terminal</button>
                </div>

                <!-- Modal d'ajout de lot terminal -->
                <div class="modal fade" id="new-s-@Model.SousLot.Id" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ajoutez un nouveau lot terminal à @Model.SousLot.Designation
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" class="row g-3" asp-controller="Lot" asp-action="NewLot">
                                    <div class="col-md-12">
                                        <input asp-for="@temporaryLot.IdEntreprise" type="hidden" class="form-control"
                                            placeholder="IdEntreprise" name="IdEntreprise" value="@Model.Entreprise.Id">
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="@temporaryLot.Designation" type="text" class="form-control"
                                            placeholder="Désignation" name="designation" required>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="@temporaryLot.IdLot" type="hidden" placeholder="IdLot"
                                            name="idLot" value="@Model.SousLot.IdLot.@newLTid" required>
                                    </div>
                                    <div class="col-12">
                                        <input asp-for="@temporaryLot.CoefPose" type="text" class="form-control"
                                            placeholder="Coéficient de Lot" name="coefPose" pattern="[0-9]+(\.[0-9]+)?">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Abandonner</button>
                                        <button type="submit" class="btn btn-success">Sauvegarder</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- End Vertically centered Modal-->

                @{
                    Model.TargetLotId = Model.SousLot.Id;
                }
                @await Html.PartialAsync("LotPartial/EditArticle", Model)

                <!-- Boucle des lots terminaux -->
                @foreach (var lotTerminal in Model.Lots)
                {
                    if (lotTerminal.IdLot.StartsWith($"{Model.SousLot.IdLot}"))
                    {
                        if (lotTerminal.IdLot.Count(c => c == '.') == 2)
                        {
                            Model.LotTerminal = lotTerminal;
                            @await Html.PartialAsync("LotPartial/EditLotTerminal", Model)
                            ;
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>