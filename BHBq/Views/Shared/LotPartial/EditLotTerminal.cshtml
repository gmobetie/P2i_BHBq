@model LotsViewModel
@{
    Lot temporaryLot = new Lot();
    Article temporaryArticle = new Article();
    int comptLT = 0; // Garde en mémoire le nombre de Terminaux
    var lotsTerminaux = Model.Lots
    .Where(l => l.IdLot.StartsWith($"{Model.Lot.IdLot}.{Model.SousLot.IdLot}."))
    .ToList();
    comptLT = lotsTerminaux.Count();
    var newLTid = comptLT + 1;
}

<div class="accordion-item">
    <div class="accordion-header d-flex justify-content-between align-items-center" id="heading-@Model.LotTerminal.Id">
        <button class="accordion-button" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapse-@Model.LotTerminal.Id" aria-expanded="false"
            aria-controls="collapse-@Model.LotTerminal.Id">
            @Model.LotTerminal.IdLot @Model.LotTerminal.Designation
        </button>
        <div class="d-flex justify-content-between align-items-center m-4 gap-2">
            <div class="col">

                <!-- Bouton Modifier sous-lot -->
                <div class="col">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                        data-bs-target="#edit-@Model.LotTerminal.Id">Modifier</button>
                </div>

                <!-- Modal de modification de lot Terminal -->
                <div class="modal fade" id="edit-@Model.LotTerminal.Id" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Modifier le lot @Model.LotTerminal.Designation</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" class="row g-3" asp-controller="Lot" asp-action="EditLot"
                                    asp-route-Id="@Model.LotTerminal.Id">
                                    <div class="col-md-12">
                                        <input asp-for="@temporaryLot.IdEntreprise" type="hidden" class="form-control"
                                            placeholder="IdEntreprise" name="IdEntreprise" value="@Model.Entreprise.Id">
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="@temporaryLot.Designation" type="text" class="form-control"
                                            placeholder="Désignation" name="designation">
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="@temporaryLot.IdLot" type="hidden" placeholder="IdLot"
                                            name="idLot" value="@Model.SousLot.IdLot.@newLTid">
                                    </div>
                                    <div class="col-12">
                                        <input asp-for="@temporaryLot.CoefPose" type="text" class="form-control"
                                            placeholder="Coéficient de Lot" name="coefPose" pattern="[0-9]+(\.[0-9]+)?">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Abandonner</button>
                                        <button type="submit" class="btn btn-success">Sauvegarder</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col">
                <!-- Bouton Supprimer -->
                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                    data-bs-target="#deleteModal-@Model.LotTerminal.Id">Supprimer</button>

                <!-- Modal de confirmation de suppression -->
                <div class="modal fade" id="deleteModal-@Model.LotTerminal.Id" tabindex="-1"
                    aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                Êtes-vous sûr de vouloir supprimer ce lot ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <form asp-area="" asp-controller="Lot" asp-action="DeleteLot"
                                    asp-route-id="@Model.LotTerminal.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="collapse-@Model.LotTerminal.Id" class="accordion-collapse collapse"
        aria-labelledby="heading-@Model.LotTerminal.Id" data-bs-parent="#accordionLots-@Model.SousLot.Id">
        <div class="accordion-body">

            <!-- Bouton d'ajout d'un article -->
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-sm btn-dark" data-bs-toggle="modal"
                    data-bs-target="#new-a-@Model.LotTerminal.Id">Ajouter un
                    article</button>
            </div>

            <!-- Modal d'ajout d'un article -->
            <div class="modal fade" id="new-a-@Model.LotTerminal.Id" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Ajoutez un nouvel article à @Model.LotTerminal.Designation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" class="row g-3" asp-controller="Lot" asp-action="NewArticle">
                                <input type="hidden" asp-for="@temporaryArticle.IdLot" value="@Model.LotTerminal.IdLot"
                                    name="IdLot" />

                                <div class="mb-3">
                                    <input type="text" asp-for="@temporaryArticle.Libelle" class="form-control"
                                        placeholder="Libellé" name="Libelle" required />
                                </div>

                                <div class="col-md-6">
                                    <input type="text" asp-for="@temporaryArticle.Unite" class="form-control"
                                        placeholder="Unité" name="Unite" required />
                                </div>

                                <div class="col-md-6">
                                    <input type="text" asp-for="@temporaryArticle.PrixH" class="form-control"
                                        placeholder="Prix Haut" name="PrixH" required pattern="[0-9]+(\.[0-9]{1,2})?"
                                        title="Veuillez entrer un nombre valide avec au maximum 2 décimales" />
                                </div>

                                <div class="col-md-6">
                                    <input type="text" asp-for="@temporaryArticle.PrixM" class="form-control"
                                        placeholder="Prix Moyen" name="PrixM" required pattern="[0-9]+(\.[0-9]{1,2})?"
                                        title="Veuillez entrer un nombre valide avec au maximum 2 décimales" />
                                </div>

                                <div class="col-md-6">
                                    <input type="text" asp-for="@temporaryArticle.PrixB" class="form-control"
                                        placeholder="Prix Bas" name="PrixB" required pattern="[0-9]+(\.[0-9]{1,2})?"
                                        title="Veuillez entrer un nombre valide avec au maximum 2 décimales" />
                                </div>

                                <div class="mb-3">
                                    <input type="text" asp-for="@temporaryArticle.Calcul" class="form-control"
                                        placeholder="Modèle de Calcul (format Latex)" name="Calcul" required />
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Annuler</button>
                                    <button type="submit" class="btn btn-success">Ajouter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Affichage des articles -->
            @if (Model.Articles.Any(article => article.IdLot == Model.LotTerminal.IdLot))
            {
                <!-- Boucle des Articles -->
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Libellé</th>
                            <th scope="col">Unité</th>
                            <th scope="col">Prix Haut</th>
                            <th scope="col">Prix Moyen</th>
                            <th scope="col">Prix Bas</th>
                            <th scope="col">Modèle de Calcul</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var article in Model.Articles)
                        {
                            if (article.IdLot == Model.LotTerminal.IdLot)
                            {
                                <tr>
                                    <th scope="row">@article.Libelle</th>
                                    <td>@article.Unite</td>
                                    <td>@article.PrixH</td>
                                    <td>@article.PrixM</td>
                                    <td>@article.PrixB</td>
                                    <td>@article.Calcul</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>