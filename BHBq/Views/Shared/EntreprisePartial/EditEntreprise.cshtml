@model EntrepriseViewModel
@{
    string modalId = $"myModal-{Model.TargetEntreprise.Id}";
}

<div class="info-box card">
    <div class="row">
        <div class="col">
            <i class="bi bi-geo-alt"></i>
            <h3>@Model.TargetEntreprise.NomEntreprise</h3>
        </div>
        <div class="col text-end">
            <!-- Delete -->
            <button type="button" class="btn btn-lg" data-bs-toggle="modal"
                data-bs-target="#deleteModal-@Model.TargetEntreprise.Id">
                <i class="ri-delete-bin-2-line fs-2"></i>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="deleteModal-@Model.TargetEntreprise.Id" tabindex="-1"
                aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center">
                            Êtes-vous sûr de vouloir supprimer cette entreprise ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form asp-area="" asp-controller="Entreprise" asp-action="DeleteEntreprise"
                                asp-route-id="@Model.TargetEntreprise.Id" method="post">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-6 col-md-6 justify-content-center">
            <div class="row m-2">
                <div class="col-lg-6 col-md-6 label text-end">
                    <h5>Statut :</h5>
                </div>
                <div class="col-lg-6 col-md-6">@Model.TargetEntreprise.Statut</div>
            </div>

            <div class="row m-2">
                <div class="col-lg-6 col-md-6 text-end">
                    <h5>Activité :</h5>
                </div>
                <div class="col-lg-6 col-md-6">@Model.TargetEntreprise.Activite</div>
            </div>

            <div class="row m-2">
                <div class="col-lg-6 col-md-6 text-end">
                    <h5>Siège :</h5>
                </div>
                <div class="col-lg-6 col-md-6">@Model.TargetEntreprise.Siege</div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 justify-content-center">
            <div class="row m-2">
                <div class="col-lg-6 col-md-6 label text-end">
                    <h5>Code APE :</h5>
                </div>
                <div class="col-lg-6 col-md-6">@Model.TargetEntreprise.APE</div>
            </div>

            <div class="row m-2">
                <div class="col-lg-6 col-md-6 text-end">
                    <h5>N° SIRET :</h5>
                </div>
                <div class="col-lg-6 col-md-6">@Model.TargetEntreprise.Siret</div>
            </div>
        </div>
    </div>

    @if (Model.TargetEntreprise.Description != null)
    {
        <h5>Description</h5>
        <p class="small fst-italic">@Model.TargetEntreprise.Description</p>
    }

    <div class="row mt-4">
        <div class="col">
            <div class="btn-group" role="group" aria-label="Actions">
                <a class="btn btn-outline-secondary btn-sm" asp-controller="CompteBancaire"
                    asp-action="ComptesBancaires" asp-route-idEntreprise="@Model.TargetEntreprise.Id">Comptes
                    bancaires</a>
                <a class="btn btn-outline-secondary btn-sm" asp-area="" asp-controller="Lot" asp-action="Lots"
                    asp-route-idEntreprise="@Model.TargetEntreprise.Id">Lots</a>
            </div>
        </div>
        <div class="col">
            <div class="text-end">
                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="modal"
                    data-bs-target="#@modalId">Modifier</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="@modalId" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mise à jour des informations de @Model.TargetEntreprise.NomEntreprise</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" class="row needs-validation g-3" asp-controller="Entreprise" asp-action="EditEntreprise" novalidate
                        asp-route-Id="@Model.TargetEntreprise.Id">
                        <div class="col-md-12">
                            <input asp-for="@Model.TargetEntreprise.NomEntreprise" maxlength="20" type="text"
                                class="form-control" placeholder="Nom de l'entreprise" name="nomEntreprise"
                                pattern="[A-Z-]+"
                                title="Veuillez fournir un nom d'entreprise en majuscules avec éventuellement des tirets (-)"
                                required>
                            <div class="invalid-feedback" for="nomEntreprise">
                                Veuillez fournir un nom d'entreprise en majuscules avec éventuellement des tirets (-).
                            </div>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="@Model.TargetEntreprise.Siege" type="text" class="form-control"
                                placeholder="Siège" name="siege" pattern="[A-Za-z0-9\s]{1,100}" required>
                            <div class="invalid-feedback" for="siege">
                                Veuillez fournir une adresse de siège valide.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <select asp-for="@Model.TargetEntreprise.Statut" class="form-control" name="statut"
                                id="statut" required>
                                <option value="">Sélectionnez un statut</option>
                                <option value="SAS">SAS</option>
                                <option value="SARL">SARL</option>
                                <option value="SA">SA</option>
                                <option value="EI">EI</option>
                                <option value="EURL">EURL</option>
                                <option value="SNC">SNC</option>
                                <option value="SCOP">SCOP</option>
                                <option value="SC">SC</option>
                                <option value="GIE">GIE</option>
                                <option value="Autre">Autre</option>
                            </select>
                            <div class="invalid-feedback" for="statut">
                                Veuillez sélectionner un statut.
                            </div>
                        </div>
                        <div class="col-md-12">
                            <input asp-for="@Model.TargetEntreprise.Activite" type="text" class="form-control"
                                placeholder="Activité" name="activite" required>
                            <div class="invalid-feedback" for="activite">
                                Veuillez fournir une activité valide.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="@Model.TargetEntreprise.Siret" pattern="[0-9]{14}" type="text"
                                class="form-control" placeholder="SIRET" minlength="14" maxlength="14" name="siret" required>
                            <div class="invalid-feedback" for="siret">
                                Veuillez fournir un code SIRET valide (14 chiffres).
                            </div>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="@Model.TargetEntreprise.APE" type="text" pattern="[0-9]{4}[A-Z]{1}"
                                class="form-control" placeholder="APE" name="ape" required>
                            <div class="invalid-feedback" for="ape">
                                Veuillez fournir un code APE valide (4 chiffres et 1 lettre majuscule).
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="@Model.TargetEntreprise.Description" class="form-control"
                                    id="floatingTextarea" name="description" style="height: 100px;"></textarea>
                                <label for="floatingTextarea">Description</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abandonner</button>
                            <button type="submit" class="btn btn-success">Sauvegarder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!-- Fin du Modal centré verticalement -->
</div>
